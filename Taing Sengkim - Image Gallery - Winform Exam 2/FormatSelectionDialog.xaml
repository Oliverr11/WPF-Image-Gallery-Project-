<Window x:Class="ImageGallery_WPF_Exam.FormatSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Format" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <ComboBox x:Name="cmbFormats" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <ComboBoxItem Content="PNG (.png)" Tag=".png" />
            <ComboBoxItem Content="JPEG (.jpg)" Tag=".jpg" />
            <ComboBoxItem Content="BMP (.bmp)" Tag=".bmp" />
            <ComboBoxItem Content="GIF (.gif)" Tag=".gif" />
            <ComboBoxItem Content="TIFF (.tiff)" Tag=".tiff" />

        </ComboBox>
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Width="75" Click="OK_Click" />
    </Grid>
</Window>